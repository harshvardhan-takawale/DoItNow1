<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2" >

        <TextView
            android:id="@+id/txtwhatareyoudoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_toEndOf="@+id/linearLayout2"
            android:layout_toRightOf="@+id/linearLayout2"
            android:text="What are you doing now then?"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtiamdoing"
                android:layout_below="@+id/txtwhatareyoudoing"
                android:text="I am "
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtiamdoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtwhatareyoudoing"
                android:layout_toEndOf="@+id/linearLayout2"
                android:layout_toRightOf="@+id/linearLayout2"
                android:hint="@string/activityname"
                android:lineSpacingExtra="8sp"
                android:textSize="30sp"
                android:typeface="sans" />

        </LinearLayout>

        <Button
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Go"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>